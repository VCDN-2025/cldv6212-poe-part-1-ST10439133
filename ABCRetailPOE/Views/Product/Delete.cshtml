@model Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>

<div>
    <strong>Name:</strong> @Model.ProductName<br />
    <strong>Price:</strong> $@Model.Price<br />
    <strong>Stock:</strong> @Model.StockQuantity<br />
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" width="150" />
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />
    <input type="hidden" name="rowKey" value="@Model.RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>


